CI_ENVIRONMENT = production

# App URL
app.baseURL = 'https://job.codeapka.com/'
app.forceGlobalSecureRequests = true

# Optional: allow additional hostnames if behind proxies/CDN
# Repeat the line to add more hostnames
# app.allowedHostnames[] = 'job.codeapka.com'

# Hide index.php in URLs (ensure web root points to /public or see root .htaccess)
app.indexPage = ''

# Database (recommended for live: MySQL)
database.default.DBDriver = 'MySQLi'
database.default.hostname = '127.0.0.1'
database.default.port = 3306
database.default.database = 'CHANGE_ME_DB'
database.default.username = 'CHANGE_ME_USER'
database.default.password = 'CHANGE_ME_PASSWORD'
database.default.DBDebug = false

# Session (filesystem default is fine; ensure writable/session is writable)
# session.driver = 'CodeIgniter\\Session\\Handlers\\FileHandler'
# session.savePath = ''

# Security
security.csrfProtection = 'cookie'

# ---
# If you prefer SQLite on live (not recommended for high traffic), then comment the MySQL block above
# and uncomment the following two lines. Ensure the file path exists and is writable by PHP.
# database.default.DBDriver = 'SQLite3'
# database.default.database = 'writable/database.db'
